<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Published at:</strong>
  <%= @post.published_at %>
</p>

<% @post.comments.each do |com| %>
   <%= div_for com do %>
      <td><b><%= com.name %></b></td><br>
      <td>Comment:</td>
      <td><%= com.comment %></td>
   <% end %>
<% end %>

<%= render 'comments/form' %>

<%= link_to 'Drafts', drafts_path %> |
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Home', posts_path %>
