<h1>Listing Posts</h1>
<%= render 'search' %>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Published at</th>
      <th></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= post.published_at %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, class: "destroy" %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="buttons">
  <%= link_to 'New Post', new_post_path %>
  <%= link_to 'Drafts', drafts_path %>
</div>
